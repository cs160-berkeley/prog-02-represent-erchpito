<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/home"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    tools:context="com.erchpito.represent.DetailedActivity"
    tools:showIn="@layout/activity_detailed">

    <RelativeLayout android:id="@+id/field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:padding="20dp">

        <TextView android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="25sp"
            android:text="CA, 94704"/>

        <TextView android:id="@+id/party_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/name_text"
            android:layout_alignParentStart="true"

            android:textSize="12sp"
            android:text="13th Congressional District"/>

        <TextView android:id="@+id/term_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/name_text"
            android:layout_alignParentEnd="true"

            android:textSize="12sp"
            android:text="13th Congressional District"/>

    </RelativeLayout>

    <ImageView android:id="@+id/portrait_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/field"
        android:scaleType="centerCrop" />

    <RelativeLayout android:id="@+id/social_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/portrait_image"
        android:elevation="8dp"
        android:padding="10dp"
        android:clipToPadding="false">

        <Button android:id="@+id/website_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"

            android:textSize="10sp"
            android:gravity="center"
            android:text="Website"
            android:elevation="10dp"
            android:padding="15dp"
            android:onClick="onClick" />

        <Button android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"

            android:textSize="10sp"
            android:gravity="center"
            android:text="potatopotatopotatopotato"
            android:padding="15dp"
            android:elevation="10dp"
            android:onClick="onClick" />

    </RelativeLayout>

    <TextView android:id="@+id/career_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/social_field"

        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="12sp"
        android:scrollbars = "vertical"
        android:text="13th Congressional District"/>

</RelativeLayout>
